body {
  color: $fontColor;
}

b,
strong {
  font-weight: 500;

  .ql-editor & {
    font-weight: 700;
  }
}

.mat-typography p {
  margin: 0 0 6px;
}

.font-weight-lighter {
  font-weight: lighter;
}

.colorMainColor {
  color: $mainColor;
}

.color-secondaryColor {
  color: $secondaryColor;
}

.container {
  @media only screen and (min-width: 48em) {
    width: 46rem;
  }

  @media only screen and (min-width: 62em) {
    width: 61rem;
  }

  @media only screen and (min-width: 75em) {
    width: 71rem;
  }
}

.color-mainColor {
  color: $mainColor;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.mat-button.btn-regresar {
  height: 2em;
  padding: 0;
  border-radius: 2em;
  margin-top: 1em;

  img {
    height: 2em;
    margin-top: -0.6em;
  }
}

.title-menu {
  .mat-typography &--h1 {
    text-align: center;
    color: $mainColor;
    font-weight: 500;
    // margin-top: 1.5em;
    margin-bottom: 0;
    display: inline-block;

    &::after {
      content: "";
      display: block;
      position: relative;
      height: 0.15em;
      background-color: $mainColor;
      border-radius: 1em;
      width: calc(100% + 1em);
      max-width: calc(100vw + 0.5em);
      left: -0.5em;
      margin-top: 0.1em;
    }
  }
}

.info-sub-title,
.mat-typography .info-sub-title {
  margin-top: 0.8em;
  margin-bottom: 1.2em;
  color: $mainColor;

  span {
    margin-left: 1em;
    margin-right: 1em;
  }
}

.line-25 {
  line-height: 25px !important;
}

.m-0 {
  margin: 0 !important;
}

.mb-0 {
  margin-bottom: 0 !important;
}

.mt-0,
.header-card--text.sub-text.mt-0 {
  margin-top: 0 !important;
}

.mt-05em {
  margin-top: 0.5em !important;
}

.mb-05em {
  margin-bottom: .5em !important;
}

.mt-05em {
  margin-top: .5em !important;
  margin-bottom: 0.5em !important;
}

.mt-1em {
  margin-top: 1em;
}

.mt-2em {
  margin-top: 2em;
}

.mt-3em {
  margin-top: 3em;
}

.mb-1em {
  margin-bottom: 1em !important;
}

.mb-4em {
  margin-bottom: 4em !important;
}

.mr-0 {
  margin-right: 0 !important;
}

.mr-1em {
  margin-right: 1em !important;
}

.mx-1em {
  margin-left: 1em;
  margin-right: 1em;
}

.ml-05 {
  margin-left: 0.5em !important;
}

.pl-0 {
  padding-left: 0 !important;
}

.pr-0 {
  padding-right: 0;
}

.pr-1 {
  padding-right: 0.5em;
}

.px-2em {
  padding-left: 2em !important;
  padding-right: 2em !important;
}

.pt-1 {
  padding-top: 0.5em;
}

.pt-3em {
  padding-top: 3em;
}

.pr-3em {
  padding-right: 3em;
}

.d-flex {
  display: flex;
}

.align-items-center {
  align-items: center;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-flex-end {
  justify-content: flex-end;
}

.m1 {
  margin: 1em;
}

.mt-2em,
.card-subTitle.var-main-gris.mt-2em {
  margin-top: 2em;
}

.mb-2em {
  margin-bottom: 2em !important;
}

.mt-2em {
  margin-top: 2em;
}

.m05_important {
  margin: 0.5em !important;
}

.opaco {
  opacity: 0.6;
}

.left-1-7 {
  left: 1.7em;
}

input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.loading {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff80;
  z-index: 100;

  animation-duration: 0.3s;
  animation-name: animatedOpacity;
}

.icon {
  height: 1.4em;
  margin-bottom: -0.3em;
}

.position-relative {
  position: relative;
}

.capitalize,
.capitalize option,
.capitalize .mat-option-text {
  text-transform: capitalize;
}

.mat-card {
  .col-md-8:first-child,
  .col-md-10:first-child,
  .col-md-12:first-child {
    padding-left: 0;
    padding-right: 0;
  }
}

.d-block {
  display: block !important;
}

.font-weight-bold {
  font-weight: 500;
}

.info-tooltip.mat-tooltip {
  background-color: $tertiaryColor;
  color: $tertiaryColorFont;
  border-radius: 50em;
  padding: 0 1em;
  font-size: 1em !important;
  text-align: center;
}

%tooltip {
  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;
  min-width: 11em;
  max-height: 15px;
  font-size: 1em !important;
  font-weight: 400;
  text-transform: initial;
  color: $tertiaryColorFont;
  background-color: $tertiaryColor;
  border-radius: 50em;
  padding: .2em 1em;
  position: absolute;
  top: -2em;
  transform-origin: bottom;
  animation-name: animatedSelect;
  animation-duration: .2s;
  animation-fill-mode: forwards;
}
